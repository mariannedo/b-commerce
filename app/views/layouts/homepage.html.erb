    <p class="alert"><%= alert %></p>
  <% end %>
  <div id="Wrapper">

    <div id="HomeLogo">
      <a href="<%= root_path %>"><span class="logo h2">Thrift</span></a>
    </div>

    <aside class="outer">
      <%= yield %>
    </aside>

    <div id="Footer">
        <img src="/images/loader.svg">
        <h1 class="h4">Copyright <span class="copyright">Â©</span> 2014. A thing by Team-ISH</h1>
    </div>

  </div>
</body>
</html>
