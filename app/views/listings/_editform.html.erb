<%= form_for @listing, :html => { :multipart => true } do |f| %>
  <div>
    <label>Listing Title</label>
    <%= f.text_field :title, placeholder: 'listing title' %>
  </div>

  <div>
    <label>Story</label>
    <%= f.text_area :story, placeholder: 'product story' %>
  </div>

  <div>
    <label>Desired Price</label>
    <nobr class="pos-rel">
      <span class="dollar-sign">$</span>
      <%= f.text_field :price, placeholder: '1,000,000', class: 'short' %>
    </nobr>
  </div>

  <div>
    <label>Image 1</label>
    <%= f.file_field :image %>
  </div>

  <div>
    <label>Image 2</label>
    <%= f.file_field :image2 %>
  </div>

  <div>
    <label>Image 3</label>
    <%= f.file_field :image3 %>
  </div>

  <div style="display: none;" class="existing-image">
    <b>Existing Image</b>
    <%= image_tag(@listing.image) %>
  </div>

  <div style="display: none;">
    <label>Status</label>
    <%= f.text_field :status, placeholder: 'Open' %>
  </div>

  <%= submit_tag 'Submit' %>

  <div>
    <b><%= link_to 'Delete Listing', listing_path(@listing), :method => :delete, :data => { confirm: 'Are you sure?' } %></b>
  </div>
<% end %>