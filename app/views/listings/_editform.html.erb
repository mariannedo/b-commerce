<%= form_for @listing, :html => { :multipart => true } do |f| %>
  <label>Title</label>
  <%= f.text_field :title, placeholder: 'listing title' %>

  <label>Story</label>
  <%= f.text_area :story, placeholder: 'product story' %>

  <label>Desired Price</label>
  $<%= f.text_field :price, placeholder: '1,000,000' %>

  <div>
    <%= f.file_field :image %>
  </div>

  <div>
    <%= f.file_field :image2 %>
  </div>

  <div>
    <%= f.file_field :image3 %>
  </div>

  <div style="display: none;" class="existing-image">
    <b>Existing Image</b>
    <%= image_tag(@listing.image) %>
  </div>

  <label>Status</label>
  <%= f.text_field :status, placeholder: 'Open' %>

  <p>
    <b><%= link_to 'Delete Listing', listing_path(@listing), :method => :delete, :data => { confirm: 'Are you sure?' } %></b>
  </p>

  <%= submit_tag 'Submit' %>
<% end %>