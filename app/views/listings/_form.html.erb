<%= form_for @listing, :html => { :multipart => true } do |f| %>
  <%= f.hidden_field :status, value: 'Open' %>

  <div>
    <label>Title</label>
    <%= f.text_field :title, placeholder: 'listing title' %>
  </div>

  <div>
    <label>Story</label>
    <%= f.text_area :story, placeholder: 'product story' %>
  </div>

  <div>
    <label>Desired Price</label>
    $<%= f.text_field :price, placeholder: '1,000,000' %>
  </div>

  <div>
    <%= f.file_field :image %>
  </div>
    <div>
    <%= f.file_field :image2 %>
  </div>
    <div>
    <%= f.file_field :image3 %>
  </div>

  <div class="existing-image">
    <b>Existing Image</b>
    <%= image_tag(@listing.image) %>
  </div>

  <%= submit_tag 'Submit' %>
<% end %>