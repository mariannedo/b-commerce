<h1>Listing</h1>
<p><%= @listing.user.first_name %> posted:</p>

<b>Title</b>
<p><%= @listing.title %></p>

<b>Story</b>
<p><%= @listing.story %></p>

<b>Image</b>
<%= image_tag @listing.image_url.to_s %>

<% if(current_user == @listing.user) %>
  <%= link_to('Edit this listing', edit_listing_path) %>
<% else %>
  <%# Contact the person %>

  <%= link_to('Buy this thing', listing_send_buy_msg_path(@listing)) %>
  <%= link_to("Haggle #{@listing.user.first_name}", listing_haggle_path(@listing)) %>
  <%= link_to("Ask #{@listing.user.first_name} a question", listing_contact_path(@listing)) %>
<% end %>